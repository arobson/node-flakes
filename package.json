{
  "name": "node-flakes",
  "version": "2.1.0",
  "description": "128-bit, k-ordered, lexicographically sortable, base 62, coordination-free id generation for Node that stays crunchy in milk",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "semistandard src/* --ext .js,.ts",
    "lint-fix": "semistandard src/* --fix --ext .js,.ts",
    "pretest": "npm run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "release": "standard-version",
    "prepublishOnly": "npm run build"
  },
  "author": "Alex Robson",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/arobson/node-flakes"
  },
  "keywords": [
    "base 62",
    "base 36",
    "128 bit",
    "flake"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^1.6.0",
    "semistandard": "^17.0.0",
    "standard-version": "^9.1.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "farmhash": "^5.0.1",
    "getmac": "^6.6.0"
  },
  "semistandard": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "env": [
      "node",
      "es2020"
    ],
    "globals": [
      "_",
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "vi"
    ],
    "ignore": [
      "dist/**",
      "node_modules/**"
    ]
  },
  "vitest": {
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "lcov"
      ],
      "reportsDirectory": "coverage",
      "exclude": [
        "dist/**",
        "node_modules/**"
      ]
    }
  }
}
